@{
    Layout = "~/Views/Shared/_RegistrationLayout.cshtml";
}

<!-- Background Video -->
<video autoplay muted loop class="background-video">
    <source src="~/Content/Media/Windrise.mp4" type="video/mp4">
</video>
<body>
<div class="row center">
    <div class="col s2 m2 l2"></div>
    <div class="col s8 m8 l8">
        <div class="row">
            <div class="col s12 m12 l12" style="margin-top: 5px">
                <div class="card #c3dbc3 z-depth-4" style="border-radius: 10px; margin-bottom: 5px;">
                    <div class="card-content white-text">
                        <div class="row" ng-init="initFunc()">
                            <form name="RegistrationPage" class="col s12" novalidate>
                                <div class="row">
                                    <!-- Email -->
                                    <div class="input-field col s12">
                                        <i class="material-icons prefix">email</i>
                                        <input id="uemail" type="email" class="validate" ng-model="userEmail" name="userEmail" data-length="100" maxlength="100" required>
                                        <label for="uemail">Email</label>
                                        <span class="helper-text" ng-show="RegistrationPage.userEmail.$touched && RegistrationPage.userEmail.$invalid">This field is required</span>
                                    </div>
                                    <!-- Password -->
                                    <div class="input-field col s12">
                                        <i class="material-icons prefix">lock</i>
                                        <input id="upassword" type="{{isPasswordVisible ? 'text' : 'password'}}" class="validate" ng-model="userPassword" name="userPassword" required>
                                        <label for="upassword">Password</label>
                                        <span class="helper-text" ng-show="RegistrationPage.userPassword.$touched && RegistrationPage.userPassword.$invalid">This field is required</span>
                                    </div>
                                    <div class="input-field col s12">
                                        <i class="material-icons prefix">lock</i>
                                        <input id="uPConfirm" type="{{isPasswordVisible ? 'text' : 'password'}}" class="validate" ng-model="userConfirm" name="userConfirm" required>
                                        <label for="uPConfirm">Confirm Password</label>
                                        <span class="helper-text" ng-show="RegistrationPage.userConfirm.$touched && RegistrationPage.userConfirm.$invalid">This field is required</span>
                                    </div>
                                </div>
                                <!-- Buttons -->
                                <div class="col s12 m12 l12">
                                    <div class="col s12 m6 l6">
                                        <a class="waves-effect waves-light btn-large col s12" ng-click="getInputData()"
                                           ng-disabled="RegistrationPage.$invalid">
                                            <i class="material-icons left">send</i><b>SUBMIT</b>
                                        </a>
                                    </div>
                                    <div class="col s12 m6 l6">
                                        <a class="waves-effect waves-light btn-large col s12 grey darken-4" ng-click="cancelFunc()">
                                            <i class="material-icons left">cancel</i><b @*style="color: #d8c47f""*@ class="fontcancel">CANCEL</b>
                                        </a>
                                    </div>
                                </div>
                                <!-- Link to Login Page -->
                                <div class="col s12" style="margin-top: 20px;">
                                    <a href="/Home/LoginPage">Already have an account? Login here.</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

@{
    Layout = "~/Views/Shared/_RegistrationLayout.cshtml";
}

<div class="row center-align">
    <div class="col s12 m6 l4 offset-m3 offset-l4">
        <div class="row">
            <div class="col s12 m12 l12" style="margin-top: 42px">
                <div class="card z-depth-5">
                    <!-- Logo Section -->
                    <div class="center-align" style="margin-top: 9px;">
                        <img src="~/Content/Media/pokemon_logo.png" alt="Pokémon Logo" class="responsive-img" style="max-height: 80px;">
                    </div>

                    <!-- Title Section -->
                    <div class="center-align" style="width: 60%; margin: 0 auto;">
                        <h2 class="black-text" style="font-size: 24px; margin-top: 10px; margin-bottom: -5px;">
                            Register your Pokémon Team Builder account
                        </h2>
                    </div>

                    <div class="card-content white-text">
                        <div class="row" ng-init="initFunc()">
                            <form name="RegistrationPage" class="col s12" novalidate>
                                <div class="row">
                                    <!-- Username -->
                                    <div class="input-field col s12" id="username-field">
                                        <div class="input-wrapper">
                                            <input id="fName" type="text" class="username-input" placeholder="Username" ng-model="firstName" name="firstName" data-length="50" maxlength="50" required>
                                        </div>
                                        <span class="helper-text" ng-show="RegistrationPage.firstName.$touched && RegistrationPage.firstName.$invalid">This field is required</span>
                                    <div class="input-field col s12">

                                        <i class="material-icons prefix">account_circle</i>

                                  <input id="username" type="text" class="validate" ng-model="username" name="username" data-length="20" maxlength="20" required>
                                        <label for="username">Username</label>
                                        <span class="helper-text" ng-show="RegistrationPage.username.$touched && RegistrationPage.username.$invalid">This field is required</span>
                                    </div>

                                    <!-- Email -->
                                    <div class="input-field col s12">
                                        <div class="input-wrapper">
                                            <input id="uemail" type="email" class="email-input" placeholder="Email" ng-model="userEmail" name="userEmail" data-length="100" maxlength="100" required>
                                        </div>
                                        <span class="helper-text" ng-show="RegistrationPage.userEmail.$touched && RegistrationPage.userEmail.$invalid">This field is required</span>
                                    </div>

                                    <!-- Password (Hello back-end, pls put visibility toggle, thanks) -->
                                    <div class="input-field col s12" id="password-field">
                                        <div class="input-wrapper password-wrapper">
                                            <input id="upassword" type="{{isPasswordVisible ? 'text' : 'password'}}" class="password-input" placeholder="Password" ng-model="userPassword" name="userPassword" required>
                                        </div>
                                        <span class="helper-text" ng-show="RegistrationPage.userPassword.$touched && RegistrationPage.userPassword.$invalid">This field is required</span>
                                    </div>
                                    <!-- Confirm Password -->
                                    <div class="input-field col s12" id="confirm-password-field">
                                        <div class="input-wrapper password-wrapper">
                                            <input id="uPConfirm" type="{{isPasswordVisible ? 'text' : 'password'}}" class="password-input" placeholder="Confirm Password" ng-model="userConfirm" name="userConfirm" required>
                                        </div>
                                        <span class="helper-text" ng-show="RegistrationPage.userConfirm.$touched && RegistrationPage.userConfirm.$invalid">This field is required</span>
                                    <div class="input-field col s12" style="position: relative;">
                                        <i class="material-icons prefix">lock</i>
                                        <input id="uPConfirm" type="{{isPasswordVisible ? 'text' : 'password'}}"
                                               class="validate" ng-model="userConfirm" name="userConfirm" required>
                                        <label for="uPConfirm">Confirm Password</label>
                                        <span class="helper-text" ng-show="RegistrationPage.userConfirm.$touched && RegistrationPage.userConfirm.$invalid">
                                            This field is required
                                        </span>
                                    </div>
                                </div>

                                <!-- Buttons -->
                                <div class="col s12 m6">
                                    <a class="waves-effect waves-light btn col s12 button-style" id="submitbtn" ng-click="getInputData()" ng-disabled="RegistrationPage.$invalid">
                                        Submit
                                    </a>
                                </div>
                                <div class="col s12 m6">
                                    <a class="waves-effect waves-light btn col s12 button-style" id="cancelbtn" ng-click="cancelFunc()">
                                        Cancel
                                    </a>
                                </div>

                                <!-- Link to Login Page -->
                                <div class="col s12" style="margin-top: 40px;">
                                    <a href="/Home/LoginPage">Already have an account? Login here.</a>
                                </div>

                                <!-- Footer -->
                                <div class="footer-container-top">
                                    <div class="copyright">
                                        Pokémon is © of Nintendo, 1995-2024
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

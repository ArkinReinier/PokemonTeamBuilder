@{
    Layout = "~/Views/Shared/_RegistrationLayout.cshtml";
}

<!-- Background Video -->
<video autoplay muted loop class="background-video">
    <source src="~/Content/Media/Windrise.mp4" type="video/mp4">
</video>

<div class="row center-align" ng-init="initAlert()">
    <div class="col s12 m6 l4 offset-m3 offset-l4">
        <div class="row">
            <div class="col s12 m12 l12" style="margin-top: 75px">
                <div class="card white transparent-card">
                    <div class="card-content white-text">
                        <div class="row" ng-init="initFunc()">
                            <form class="col s12">
                                <div class="row">
                                    <!-- Username -->
                                    <div class="input-field col s12" id="username-field">
                                        <i class="material-icons prefix">person</i>
                                        <input id="username" type="text" class="validate" ng-model="username" required>
                                        <label for="username">Username (format: firstnamelastname)</label>
                                    </div>
                                    <!-- Password -->
                                    <div class="input-field col s12" id="password-field">
                                        <i class="material-icons prefix">lock</i>
                                        <input id="password" type="password" class="validate" ng-model="password" required>
                                        <label for="password">Password</label>
                                    </div>
                                </div>
                                <!-- Buttons -->
                                <div class="col s12">
                                    <div class="col s12 m6">
                                        <a class="waves-effect waves-light btn-large col s12" id="loginbtn" ng-click="login()">
                                            <i class="material-icons left">send</i>LOGIN
                                        </a>
                                    </div>
                                    <div class="col s12 m6">
                                        <a class="waves-effect waves-light btn-large col s12 grey darken-4" ng-click="cancelFunc()">
                                            <i class="material-icons left">cancel</i><b class="fontcancel">CANCEL</b>
                                        </a>
                                    </div>
                                </div>
                                <!-- Link to Registration Page -->
                                <div class="col s12" style="margin-top: 20px;">
                                    <a href="/Home/RegistrationPage">Don't have an account? Register here.</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
